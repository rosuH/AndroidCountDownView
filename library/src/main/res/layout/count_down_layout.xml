<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_container_count_down"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/count_down_tv_days"
        style="@style/limit_layout_style"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textColor="#fff"
        tools:text="1天" />

    <TextView
        android:id="@+id/tv_days_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" : " />

    <TextView
        android:id="@+id/count_down_tv_hour"
        style="@style/limit_layout_style"
        android:layout_width="20dp"
        android:layout_height="20dp"
        tools:text="1小时" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" : " />

    <TextView
        android:id="@+id/count_down_tv_min"
        style="@style/limit_layout_style"
        android:layout_width="20dp"
        android:layout_height="20dp"
        tools:text="1分" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" : " />

    <TextView
        android:id="@+id/count_down_tv_sec"
        style="@style/limit_layout_style"
        android:layout_width="20dp"
        android:layout_height="20dp"
        tools:text="1秒" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" : " />

    <TextView
        android:id="@+id/count_down_tv_mini"
        style="@style/limit_layout_style"
        android:layout_width="20dp"
        android:layout_height="20dp"
        tools:text="1毫秒" />
</LinearLayout>